<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="50dp"
    android:gravity="center"
    android:background="@android:color/transparent">

    <TextView
        android:id="@+id/city_search_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/city_search_title" />

    <EditText
        android:id="@+id/city_search_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:inputType="text"
        android:focusable="true"
        android:layout_below="@id/city_search_title" />

    <TextView
        android:id="@+id/state_search_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@id/city_search_input"
        android:text="@string/state_search_title" />

    <EditText
        android:id="@+id/state_search_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:inputType="text"
        android:layout_below="@id/state_search_title" />

    <Button
        android:id="@+id/city_search_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/state_search_input"
        android:layout_marginTop="20dp"
        android:text="@string/search_button_text" />

    <Button
        android:id="@+id/city_cancel_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/state_search_input"
        android:layout_toRightOf="@id/city_search_button"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:text="@string/cancel_button_text" />
</RelativeLayout>